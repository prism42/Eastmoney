<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#55666666" />
            <corners android:radius="1.5dip" />
        </shape>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="0.0dip" />
                    <stroke android:width="4.0dip" android:color="#ffffffff" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="0.0dip" />
                    <stroke android:width="2.0dip" android:color="#ee3074c2" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>