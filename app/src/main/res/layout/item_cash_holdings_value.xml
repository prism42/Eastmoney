<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="68dp">

    <LinearLayout
        android:layout_width="116dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_stock_securities"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start|bottom"
            android:paddingLeft="10dp"
            android:paddingBottom="2dp"
            android:text=""
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_stock_market_value"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="start|top"
            android:paddingTop="2dp"
            android:textColor="@color/black"
            android:text=""
            />

    </LinearLayout>

    <com.tkid.eastmoney.widget.ObserverHScrollViewIntercept
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.tkid.eastmoney.widget.ObserverHScrollView
            android:id="@+id/content_scroll_view"
            android:layout_width="match_parent"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:scrollbars="none"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_stock_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_stock_open_position"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="end|bottom"
                        android:paddingRight="10dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/black"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/tv_stock_available"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:gravity="end|top"
                        android:textColor="@color/black"
                        android:paddingTop="2dp"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_stock_current_price"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="end|bottom"
                        android:paddingRight="10dp"
                        android:textColor="@color/black"
                        android:paddingBottom="2dp"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/tv_stock_cost"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:gravity="end|top"
                        android:textColor="@color/black"
                        android:paddingTop="2dp"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_stock_opsition_gain_and_loss"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="end|bottom"
                        android:paddingRight="10dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/green_kui"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/tv_stock_opsition_gain_and_loss_percent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:gravity="end|top"
                        android:paddingTop="2dp"
                        android:textColor="@color/green_kui"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_stock_profit_and_loss"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="end|bottom"
                        android:paddingRight="10dp"
                        android:paddingBottom="2dp"
                        android:text=""
                        android:textColor="@color/red_ying"
                        />

                    <TextView
                        android:id="@+id/tv_stock_profit_and_loss_percent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:gravity="end|top"
                        android:paddingTop="2dp"
                        android:textColor="@color/red_ying"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_stock_individual_positions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp"
                        android:gravity="end|center_vertical"
                        android:text=""
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_stock_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp"
                        android:gravity="end|center_vertical"
                        android:text=""
                        android:textColor="@color/black"
                        />

                </LinearLayout>

            </LinearLayout>

        </com.tkid.eastmoney.widget.ObserverHScrollView>

    </com.tkid.eastmoney.widget.ObserverHScrollViewIntercept>

</LinearLayout>