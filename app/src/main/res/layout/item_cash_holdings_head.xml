<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_item_head_securities_market_value"
        android:layout_width="116dp"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:paddingLeft="10dp"
        android:text="证券/市值" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_item_head_stock_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_head_open_position_and_available"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingRight="10dp"
                android:textColor="@color/gray98"
                android:text="持仓/可用" />

            <TextView
                android:id="@+id/tv_item_head_current_price_and_cost"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingRight="10dp"
                android:textColor="@color/gray98"
                android:text="现价/成本" />

            <TextView
                android:id="@+id/tv_item_head_opsition_gain_and_loss"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingRight="10dp"
                android:textColor="@color/gray98"
                android:text="持仓盈亏" />

            <TextView
                android:id="@+id/tv_item_head_profit_and_loss"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingRight="10dp"
                android:textColor="@color/gray98"
                android:text="当日盈亏" />

            <TextView
                android:id="@+id/tv_item_head_individual_positions"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingRight="10dp"
                android:textColor="@color/gray98"
                android:text="个股仓位" />

            <TextView
                android:id="@+id/tv_item_head_stock_code"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingRight="10dp"
                android:textColor="@color/gray98"
                android:text="证券代码" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>